{
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "../../packages/third-party/Cesium-es6.d.ts"],
  "extends": "tsconfig/base.json",
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true, // 用于允许从没有默认导出的模块中默认导入
    "baseUrl": ".",
    "paths": {
      "@my-threejs/*": ["src/*"]
    },
    "emitDeclarationOnly": true, // 只输出声明文件(ts 产物)
    "declaration": true, // 自动生成声明文件
    "declarationDir": "dist/types", // 声明文件生成的目录
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
  }
}
